    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7",
    "tiny-invariant": "^1.3.3"
  },
  "hotHook": {
    "boundaries": [
      "./app/controllers/**/*.ts",
      "./app/middleware/*.ts"
    ]
  },
  "eslintConfig": {
    "extends": "@adonisjs/eslint-config/app",
    "overrides": [
      {
        "files": [
          "./inertia/ui/*.ts",
          "./inertia/ui/*.tsx"
        ],
        "rules": {
          "unicorn/filename-case": [
            "error",
            {
              "case": "kebabCase"
            }
          ]
        }
      },
      {
        "files": [
          "./inertia/components/*.ts",
          "./inertia/components/*.tsx",
          "./inertia/components/**/*.ts",
          "./inertia/components/**/*.tsx"
        ],
        "rules": {
          "unicorn/filename-case": [
            "error",
            {
              "case": "pascalCase"
            }
          ]
        }
      }
    ]
  },
  "eslintIgnore": [
    "inertia/ui/*"
  ],
  "prettier": "@adonisjs/prettier-config"
}